<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Card Display</title>
    <style is:global>
      body {
        font-family:
          system-ui,
          -apple-system,
          BlinkMacSystemFont,
          "Segoe UI",
          Roboto,
          Oxygen,
          Ubuntu,
          Cantarell,
          "Open Sans",
          "Helvetica Neue",
          sans-serif;
      }
      #cardContainer {
        display: flex;
        gap: 2em;
        flex-wrap: wrap;
      }
      .card {
        width: 250px;
        border: 1px solid #ccc;
        border-radius: 8px;
        padding: 20px;
        margin-bottom: 20px;
        display: flex;
        flex-direction: column;
        align-items: center;
      }

      .card img {
        max-width: 100%;
        height: auto;
        border-radius: 8px;
        margin-bottom: 10px;
      }

      .card h2 {
        font-size: 20px;
        margin-bottom: 10px;
      }

      .card p {
        margin-bottom: 10px;
      }

      .button {
        padding: 10px 20px;
        background-color: #007bff;
        color: #fff;
        text-decoration: none;
        border-radius: 5px;
        display: inline-block;
        margin-bottom: 8px;
      }

      .button:hover {
        background-color: #0056b3;
      }
    </style>
  </head>
  <body>
    <div id="cardContainer">
      <div></div>
    </div>

    <script>
      // Function to fetch JSON file
      function fetchJSON() {
        fetch("result.json")
          .then((response) => response.json())
          .then((data) => {
            const cardContainer = document.getElementById("cardContainer");

            data.forEach((item) => {
              const card = document.createElement("div");
              card.classList.add("card");

              const image = document.createElement("img");
              image.src = item.image;
              card.appendChild(image);

              const name = document.createElement("h2");
              name.textContent = item.name;
              card.appendChild(name);

              const description = document.createElement("p");
              description.textContent = item.description;
              card.appendChild(description);

              const link = document.createElement("a");
              link.href = item.link;
              link.textContent = "Link to Theme";
              link.classList.add("button");
              card.appendChild(link);

              const github = document.createElement("a");
              github.href = item.getStartedLink;
              github.textContent = "GitHub";
              github.classList.add("button");
              card.appendChild(github);

              const deployToVercel = document.createElement("a");
              deployToVercel.href = item.getStartedLink;
              deployToVercel.textContent = "Deploy to Vercel";
              deployToVercel.classList.add("button");
              card.appendChild(deployToVercel);

              cardContainer.appendChild(card);
            });
          })
          .catch((error) => console.error("Error fetching JSON:", error));
      }

      // Call the fetchJSON function to populate the card display
      fetchJSON();
    </script>
  </body>
</html>
